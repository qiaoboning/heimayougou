/* pages/goods_detail/index.wxss */
.goods_detail_swiper{
  height:50vh;
  text-align: center;
}
.goods_detail_swiper image{
  width:70%;
}
.goods_price{
  font-size: 36rpx;
  color:var(--themeColor);
}
.goods_name_row{
  display: flex;
}
.goods_name{
  flex: 5;
  padding:10rpx;
  border-right: 1rpx solid #000;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.goods_collect{
  flex: 1;
  text-align: center;
}